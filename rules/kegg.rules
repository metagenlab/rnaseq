
rule KEGG_statistics:
    conda:
        "../envs/python-r.yml"
    input:
        count_file ="report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_counts.tsv",
        locus_tag2pathway = "reference/reference_genome_kegg_pathways.txt",
        locus_tag2module = "reference/reference_genome_kegg_modules.txt",
        module2description = "reference/module_description.txt",
        pathway2description = "reference/pathway_description.txt",
        locus_tag2ko = "reference/reference_genome_kegg_ko.txt",
        ko2description = "reference/ko_description.txt"
    output:
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_pathways.tsv",
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_modules.tsv",
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_pathways_genes.tsv",
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_modules_genes.tsv",

    script: "scripts/KEGG_statistics.py"


rule get_module_rpkm_mean:
    conda:
        "../envs/python-r.yml"
    params:
        sample_table = config["local_samples"],
    input:
        rpkm_table = "report/rnaseq/edger/rpkm_table.tsv",
        count_file ="report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_counts.tsv",
        locus_tag2module = "reference/reference_genome_kegg_modules.txt",
        module2description = "reference/module_description.txt",
    output:
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_modules_rpkm_mean.tsv",
    script: "scripts/KEGG_module_rpkm.py"


rule get_pathway_rpkm_mean:
    conda:
        "../envs/python-r.yml"
    params:
        sample_table = config["local_samples"],
    input:
        rpkm_table = "report/rnaseq/edger/rpkm_table.tsv",
        count_file ="report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_counts.tsv",
        locus_tag2pathway = "reference/reference_genome_kegg_pathways.txt",
        pathway2description = "reference/pathway_description.txt",
    output:
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_pathways_rpkm_mean.tsv",
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_pathways_rpkm_sum.tsv",
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_pathways_rpkm_detail.tsv",
    script: "scripts/KEGG_pathway_rpkm.py"


rule rpkm_heatmap_detail:
    conda:
        "../envs/edger.yml"
    input:
        "report/rnaseq/edger/{condition_1}_vs_{condition_2}/{condition_1}_vs_{condition_2}_{module_or_pathway}_rpkm_detail.tsv",
    output:
