

rule htseq_count:
    conda:
        pipeline_path + "envs/htseq.yml"
    input:
        "reference/GCA_000092785.1_ASM9278v1_genomic.gff",
        "samples/{sample}/mapping/bwa/GCA_000092785.bam"
    output:
        "samples/{sample}/rnaseq/htseq/counts.txt"
    shell:
        """
        htseq-count --stranded=no -t gene --idattr=locus_tag -f bam {input[1]} {input[0]} > {output[0]}
        """

rule htseq_count_subsets:
    conda:
        pipeline_path + "envs/htseq.yml"
    input:
        "reference/GCA_000092785.1_ASM9278v1_genomic.gff",
        "samples/{sample}/mapping/bwa/sample_{count}/GCA_000092785.bam"
    output:
        "samples/{sample}/rnaseq/htseq/sample_{count}_counts.txt"
    shell:
        """
        htseq-count --stranded=no -t gene --idattr=locus_tag -f bam {input[1]} {input[0]} > {output[0]}
        """

rule counts_summary:
    conda:
        pipeline_path + "envs/htseq.yml"
    input:
        htseq_files = expand("samples/{sample}/rnaseq/htseq/counts.txt", sample=read_naming.keys())
    output:
        "report/rnaseq/htseq/summary_all.tab"
    script: "scripts/merge_htseq.py"
