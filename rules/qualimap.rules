

rule assess_mapping_with_qualimap:
    conda:
        pipeline_path + "envs/qualimap.yml"
    input:
        # samples/{sample}/mapping/bwa/{ref}.bam
        bam = "samples/{sample}/mapping/bwa/GCA_000092785.bam",
        bam_bai = "samples/{sample}/mapping/bwa/GCA_000092785.bam.bai"
    output:
        report = "report/qualimap/{sample}/bwa/GCA_000092785/qualimapReport.html",
        genome_results = "report/qualimap/{sample}/bwa/GCA_000092785/genome_results.txt",
    log:
        logging_folder+"samples/{sample}/logs/bwa/GCA_000092785/qualimap.txt",
    shell:
        """
        qualimap bamqc -bam {input[bam]} -outdir $(dirname {output}) > {log[0]}
        if [ ! -f {output[report]} ]
        then
            touch {output[report]}
            touch {output[genome_results]}
        fi
        """
